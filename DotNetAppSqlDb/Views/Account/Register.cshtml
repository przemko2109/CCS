@model BusTickets.Models.User


<div class="text-center">
    <h2>Registeration</h2>
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h7>@Html.LabelFor(m => m.Name)</h7>
        @Html.TextBoxFor(model => model.Name)

        <h1>                                                     </h1>
        <h1>                                                     </h1>

        <h7>@Html.LabelFor(m => m.Surname)</h7>
        @Html.TextBoxFor(model => model.Surname)

        <h1>                                                     </h1>
        <h1>                                                     </h1>

        <h7>@Html.LabelFor(m => m.Email)</h7>
        @Html.TextBoxFor(model => model.Email)

        <h1>                                                     </h1>
        <h1>                                                     </h1>

        <h7>@Html.LabelFor(m => m.Password)</h7>
        @Html.PasswordFor(model => model.Password)

        <h1>                                                     </h1>
        <h1>                                                     </h1>

        <h7>@Html.LabelFor(m => m.ConfirmPassword)</h7>
        @Html.PasswordFor(model => model.ConfirmPassword)

        <div class="text-center">
            <div class="text-center">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}