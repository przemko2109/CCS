@model BusTickets.Models.Ticket
@{ ViewBag.Title = "Buy the ticket"; }

<h2>Buy the ticket</h2>


@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Buy the ticket</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => Model.AgeId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => Model.AgeId, new SelectList(Model.Age, "Value", "Text"))
