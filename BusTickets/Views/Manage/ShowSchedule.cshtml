<h1>                 </h1>
<h1>                 </h1>
<h2>Working days</h2>

<table class="table">
    <tr>
        <th>
            ScheduleId
        </th>
        <th>
            MapId
        </th>
        <th>
            Hour
        </th>
        <th>
            DayId
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.DayId == 1)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MapId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteSchedule", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>

